{
  "manifest_version": 3,
  "name": "AI Helper",
  "version": "0.1",
  "author": "Ankit Kumar Gupta",
  "description": "Enhance your experience on maang.in with an AI-powered helper for problem-solving.",
  "permissions": [
    "storage",
    "activeTab",
    "tabs"
  ],
  "host_permissions": [
    "https://generativelanguage.googleapis.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://maang.in/*"
      ],
      "js": [
        "content.js"
      ],
       "type": "module"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "inject.js",
        "marked.min.js",
        "assets/delete.png",
        "assets/logo.png"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "action": {
    "default_icon": {
      "16": "assets/logo.png",
      "24": "assets/logo.png",
      "32": "assets/logo.png",
      "48": "assets/logo.png",
      "128": "assets/logo.png"
    },
    "default_popup": "index.html",
    "default_title": "AI Helper: Your assistant for maang.in"
  }
}
